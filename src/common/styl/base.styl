/*
* 全局
*/

* {
    font-family: "monospace", "Consolas", "Microsoft YaHei", "STHeitiSC-Medium";
    -webkit-tap-highlight-color: transparent;
    outline: none;
    &:focus {
        outline: none;
    }
}

body, html, p, input, textarea ,h1, h2, h3, h4, h5, h6 {
    padding: 0;
    margin: 0;
}

i {
    font-style: normal;
}

a, a:link, a:visited, a:active, a:hover {
    text-decoration: none;
    color: inherit;
}

ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

img{
  width: 100%;
  display: block;
}

::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}

::-webkit-scrollbar {
  display: none;
}

::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
    border-radius: 3px;
}

::-webkit-scrollbar-thumb {
    border-radius: 3px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .5);
}

.submit-btn
  background-color rgba(255,255,255,0.3)
  width 5.30rem
  height 0.89rem
  font-size 0.36rem
  line-height 0.89rem
  color #ffffff
  border-radius 0.89rem
  text-align center
  margin .46rem auto 0
  &.submit-btn--success
    background #ff77a4

.page-infinite-loading
  height 30px
  font-size 14px
  line-height 30px
  text-align center
  
  div
    display inline-block
    vertical-align: middle
    margin-right 5px
